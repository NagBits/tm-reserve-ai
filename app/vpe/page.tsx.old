'use client';
import { useEffect, useState } from 'react';
import { db } from '@/lib/firebase';
import { collection, getDocs, query, where } from 'firebase/firestore';
import { seedSaturdays, wipeAllMeetings, openNextMonth } from '@/lib/adminUtils';
//import { wipeAllMeetings, openNextMonth } from '@/lib/adminUtils';
import VPEGrid from '@/components/VPEGrid';
import { 
  LayoutDashboard, 
  CalendarDays, 
  Users, 
  AlertCircle, 
  PlusCircle, 
  Trash2, 
  Check, 
  Loader2, 
  RefreshCw 
} from 'lucide-react';

export default function VPEPage() {
  const [status, setStatus] = useState("");
  const [stats, setStats] = useState({ total: 0, openSlots: 0, nextDate: '-' });
  
  // Fetch quick stats on load
  useEffect(() => {
    fetchStats();
  }, []);

  const fetchStats = async () => {
    const q = query(collection(db, "meetings"));
    const snap = await getDocs(q);
    
    let slots = 0;
    let dates: Date[] = [];

    snap.docs.forEach(d => {
      const data = d.data();
      // Count empty slots
      slots += data.slots.filter((s: any) => !s.userId).length;
      // Collect dates
      if (data.timestamp) dates.push(data.timestamp.toDate());
    });

    // Find nearest future date
    const now = new Date();
    const futureDates = dates.filter(d => d >= now).sort((a, b) => a.getTime() - b.getTime());

    setStats({
      total: snap.size,
      openSlots: slots,
      nextDate: futureDates[0] ? futureDates[0].toLocaleDateString('en-GB', { day: 'numeric', month: 'short' }) : '-'
    });
  };

  const runTask = async (task: Function, msg: string) => {
    if (!confirm("Are you sure? This affects live data.")) return;
    setStatus("Processing...");
    try {
      await task();
      setStatus(msg);
      fetchStats(); // Refresh stats after action
      // Reload page to refresh the Grid component
      setTimeout(() => window.location.reload(), 1000);
    } catch (e) {
      console.error(e);
      setStatus("Error.");
    }
  };

  return (
    <div className="min-h-screen bg-slate-50">
      
      {/* --- Top Navigation Bar --- */}
      <div className="bg-slate-900 text-white p-4 sticky top-0 z-50 shadow-md">
        <div className="max-w-7xl mx-auto flex justify-between items-center">
          <div className="flex items-center gap-2 font-bold text-xl tracking-tight">
            <div className="bg-purple-600 p-1 rounded">
              <LayoutDashboard size={20} className="text-white" />
            </div>
            VPE Portal
          </div>
          <div className="text-xs text-slate-400 font-mono hidden sm:block">
            ADMIN MODE ACTIVE
          </div>
        </div>
      </div>

      <div className="max-w-7xl mx-auto p-4 md:p-8 space-y-8">
        
        {/* --- 1. Dashboard Stats Widgets --- */}
        <section className="grid grid-cols-1 md:grid-cols-3 gap-4">
          <StatCard 
            icon={<CalendarDays className="text-blue-600" />}
            label="Scheduled Meetings"
            value={stats.total.toString()}
          />
          <StatCard 
            icon={<AlertCircle className="text-orange-500" />}
            label="Open Speaking Slots"
            value={stats.openSlots.toString()}
          />
          <StatCard 
            icon={<Users className="text-purple-600" />}
            label="Next Session"
            value={stats.nextDate}
          />
        </section>

        {/* --- 2. Action Toolbar --- */}
        <section className="bg-white p-6 rounded-xl border border-slate-200 shadow-sm">
          <div className="flex flex-col md:flex-row justify-between items-center gap-4">
            <div>
              <h2 className="text-lg font-bold text-slate-900">Schedule Management</h2>
              <p className="text-slate-500 text-sm">Control the rolling calendar generation.</p>
            </div>
            
            <div className="flex gap-3">
              <button 
                onClick={() => runTask(openNextMonth, "Schedule Extended!")}
                className="flex items-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-medium text-sm transition-all shadow-sm hover:shadow active:scale-95"
              >
                <PlusCircle size={16} /> Extend 4 Weeks
              </button>
              
              <button 
                onClick={() => runTask(seedSaturdays, "Reset to Standard!")}
                className="flex items-center gap-2 px-4 py-2 bg-slate-800 hover:bg-slate-900 text-white rounded-lg font-medium text-sm transition-all"
              >
                <RefreshCw size={16} /> Reset
              </button>

              <button 
                onClick={() => runTask(wipeAllMeetings, "Database Cleared.")}
                className="flex items-center gap-2 px-4 py-2 border border-red-200 text-red-600 hover:bg-red-50 rounded-lg font-medium text-sm transition-all"
              >
                <Trash2 size={16} /> Wipe All
              </button>
            </div>
          </div>

          {/* Status Message */}
          {status && (
            <div className="mt-4 p-3 bg-slate-100 text-slate-800 rounded-lg text-sm font-semibold flex items-center gap-2 animate-pulse">
              {status === 'Processing...' ? <Loader2 className="animate-spin h-4 w-4"/> : <Check className="h-4 w-4 text-green-600"/>}
              {status}
            </div>
          )}
        </section>

        {/* --- 3. The Master Grid (Spreadsheet View) --- */}
        <section className="space-y-4">
          <div className="flex items-center justify-between">
            <h2 className="text-xl font-bold text-slate-800 flex items-center gap-2">
              <LayoutDashboard size={20} className="text-slate-400"/> 
              Master Schedule
            </h2>
            <span className="text-xs text-slate-400">
              Click any slot to manage
            </span>
          </div>
          
          {/* Include the Grid Component */}
          <VPEGrid />
        </section>

      </div>
    </div>
  );
}

// Simple Helper Component for Stats
function StatCard({ icon, label, value }: { icon: React.ReactNode, label: string, value: string }) {
  return (
    <div className="bg-white p-6 rounded-xl border border-slate-200 shadow-sm flex items-center gap-4">
      <div className="p-3 bg-slate-50 rounded-lg">
        {icon}
      </div>
      <div>
        <p className="text-slate-500 text-xs uppercase font-bold tracking-wider">{label}</p>
        <p className="text-2xl font-black text-slate-900">{value}</p>
      </div>
    </div>
  );
}
