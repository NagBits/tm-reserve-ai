'use client';
import { useState } from 'react';
import { GoogleGenerativeAI } from "@google/generative-ai";
import { Sparkles, Languages, AlertCircle, Loader2 } from 'lucide-react';

export default function FeedbackEngine() {
  const [transcript, setTranscript] = useState('');
  const [feedback, setFeedback] = useState('');
  const [loading, setLoading] = useState(false);

  const analyzeWithGemini = async () => {
    if (!transcript.trim()) return;
    
    setLoading(true);
    try {
      const genAI = new GoogleGenerativeAI(process.env.NEXT_PUBLIC_GEMINI_API_KEY!);
      //const model = genAI.getGenerativeModel({ model: "gemini-1.5-flash",},{ apiVersion: 'v1'});
      const model = genAI.getGenerativeModel({ model: "gemini-3-flash-preview"});

      const prompt = `
        You are a Toastmasters Grammarian and Speech Evaluator. 
        Analyze the following speech transcript and provide:
        1. AH-COUNTER: List and count filler words (um, ah, like, so).
        2. GRAMMARIAN: Note specific grammatical errors and suggest corrections.
        3. WORD OF THE DAY: Suggest 3 sophisticated synonyms for common words used in the text.
        4. COACH: Give 1 positive observation and 1 specific area for improvement.
        
        Transcript: "${transcript}"
      `;

      const result = await model.generateContent(prompt);
      const text = result.response.text();
      setFeedback(text);
    } catch (error) {
      console.error("Gemini Error:", error);
      setFeedback("Failed to reach the AI engine. Please check your API key.");
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="space-y-4">
      <div className="relative">
        <textarea 
          className="w-full h-44 p-5 rounded-2xl bg-slate-50 border-none ring-1 ring-slate-200 focus:ring-2 focus:ring-purple-500 outline-none transition-all text-sm leading-relaxed"
          placeholder="Paste your speech or Table Topics response here..."
          value={transcript}
          onChange={(e) => setTranscript(e.target.value)}
        />
        <div className="absolute bottom-3 right-3 text-[10px] text-slate-400 font-bold uppercase tracking-widest">
          Gemini 1.5 Flash
        </div>
      </div>

      <button 
        onClick={analyzeWithGemini}
        disabled={loading || !transcript}
        className="w-full bg-slate-900 text-white py-4 rounded-2xl font-bold hover:bg-black shadow-lg shadow-slate-200 active:scale-[0.98] transition-all flex items-center justify-center gap-2 disabled:opacity-50"
      >
        {loading ? (
          <>
            <Loader2 className="animate-spin" size={20} />
            Analyzing...
          </>
        ) : (
          <>
            <Sparkles size={20} className="text-purple-400" />
            Get AI Evaluation
          </>
        )}
      </button>

      {feedback && (
        <div className="mt-6 p-6 rounded-2xl bg-purple-50 border border-purple-100 animate-in fade-in slide-in-from-bottom-2 duration-500">
          <div className="flex items-center gap-2 mb-4 text-purple-700 font-bold">
            <Languages size={18} />
            <h3>Evaluation Results</h3>
          </div>
          <div className="prose prose-sm text-slate-700 whitespace-pre-wrap leading-relaxed">
            {feedback}
          </div>
        </div>
      )}
    </div>
  );
}
