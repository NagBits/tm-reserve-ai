// components/MeetingList.tsx
'use client';
import { useEffect, useState } from 'react';
import { db } from '@/lib/firebase';
import { collection, query, where, orderBy, onSnapshot } from 'firebase/firestore';
import { useAuth } from '@/context/AuthContext';
import { reserveRole, cancelRole } from '@/lib/actions';
import { Calendar, UserPlus, UserX, ShieldAlert } from 'lucide-react';

export default function MeetingList() {
  const { user } = useAuth();
  const [meetings, setMeetings] = useState<any[]>([]);
  
  // Check if current user is VPE
  const isVPE = user?.email === process.env.NEXT_PUBLIC_VPE_EMAIL;

  useEffect(() => {
    const q = query(
      collection(db, "meetings"),
      where("isPublished", "==", true),
      orderBy("timestamp", "asc")
    );

    const unsubscribe = onSnapshot(q, (snapshot) => {
      setMeetings(snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() })));
    }, (error) => console.error(error));

    return () => unsubscribe();
  }, []);

  const handleAction = async (meetingId: string, index: number, role: string, action: 'book' | 'cancel') => {
    if (!user) return alert("Please sign in first");
    
    // Safety check for VPE overriding
    if (action === 'cancel' && isVPE && !confirm("VPE Override: Remove this user?")) return;

    try {
      if (action === 'book') await reserveRole(meetingId, index, user, role);
      else await cancelRole(meetingId, index, user, role);
    } catch (e: any) {
      alert(e.toString());
    }
  };

  return (
    <div className="space-y-6">
      <div className="flex justify-between items-end">
        <h2 className="text-xl font-bold flex items-center gap-2"><Calendar/> Upcoming Meetings</h2>
        {isVPE && <span className="text-xs font-bold text-purple-600 bg-purple-100 px-2 py-1 rounded flex gap-1 items-center"><ShieldAlert size={12}/> VPE MODE ACTIVE</span>}
      </div>

      {meetings.length === 0 && <p className="text-slate-500">No meetings scheduled.</p>}
      
      {meetings.map((m) => (
        <div key={m.id} className="bg-white rounded-xl border border-slate-200 overflow-hidden shadow-sm">
          <div className="bg-slate-50 p-3 border-b font-bold text-slate-700 flex justify-between">
            <span>{m.date}</span>
          </div>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-px bg-slate-100">
            {m.slots.map((slot: any, idx: number) => {
              const isMySlot = slot.userId === user?.uid;
              const isTaken = !!slot.userId;

              return (
                <div key={idx} className="bg-white p-3 flex justify-between items-center group">
                  <div>
                    <div className="text-xs font-bold text-slate-400 uppercase">{slot.role}</div>
                    <div className={`text-sm font-medium ${isTaken ? 'text-slate-900' : 'text-slate-300'}`}>
                      {slot.userName || "Available"}
                    </div>
                  </div>
                  
                  {/* BUTTON LOGIC */}
                  {isTaken ? (
                    // If Taken: Show Cancel if (It's Me OR It's VPE)
                    (isMySlot || isVPE) && (
                      <button 
                        onClick={() => handleAction(m.id, idx, slot.role, 'cancel')} 
                        className={`p-2 rounded transition-colors ${isVPE && !isMySlot ? 'text-orange-500 hover:bg-orange-50' : 'text-red-500 hover:bg-red-50'}`}
                        title={isVPE ? "VPE Override: Remove User" : "Cancel my role"}
                      >
                        <UserX size={18}/>
                      </button>
                    )
                  ) : (
                    // If Available: Show Book button
                    <button 
                      onClick={() => handleAction(m.id, idx, slot.role, 'book')} 
                      className="text-green-600 hover:bg-green-50 p-2 rounded transition-colors"
                    >
                      <UserPlus size={18}/>
                    </button>
                  )}
                </div>
              );
            })}
          </div>
        </div>
      ))}
    </div>
  );
}
